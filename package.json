{
  "name": "novac-inline",
  "version": "1.0.0",
  "description": "A JavaScript inline script for Novac payment integration with custom checkout",
  "main": "dist/novac-inline.umd.js",
  "module": "dist/novac-inline.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/novac-inline.es.js",
    "require": "./dist/novac-inline.umd.js"
  },
  "scripts": {
    "build:es-umd": "vite build --config vite.config.es-umd.js",
    "build:iife": "BUILD_TARGET=iife vite build --config vite.config.iife.js",
    "build": "rm -rf dist && pnpm run build:es-umd && pnpm run build:iife",
    "dev": "vite",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx",
    "test": "jest"
  },
  "keywords": [
    "novac",
    "payment",
    "inline",
    "checkout",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "jest": "^29.7.0",
    "vite": "^5.0.0",
    "vite-plugin-css-injected-by-js": "^2.4.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0"
  }
}
